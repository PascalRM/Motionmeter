<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ramanathan.pascal.motionmeter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventsActivity"
            android:label="@string/title_activity_events"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewEvent2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FinalNewEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewEventPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GenerateNewEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OwnerEventActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DetailEventActivity" />
        <activity android:name=".LoginEventActivity" />
        <activity android:name=".MemberEventActivity"></activity>
    </application>

</manifest>